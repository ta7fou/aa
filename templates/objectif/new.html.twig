
{% extends 'base1.html.twig' %}
{% block body %}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p> C A M P I N G S </p>
                    <h1> G O A L S </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->



<div class="container">
    <div class="card mt-4 custom-card">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">ADD NEW OBJECTIVE</h4>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            
            <div class="form-group row">
                <label for="{{ form.descobj.vars.id }}" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(form.descobj, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label for="{{ form.resultatobj.vars.id }}" class="col-sm-2 col-form-label">Result</label>
                <div class="col-sm-10">
                    {{ form_widget(form.resultatobj, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label for="{{ form.imageobj.vars.id }}" class="col-sm-2 col-form-label">Image URL</label>
                <div class="col-sm-10">
                    {{ form_widget(form.imageobj, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-warning">Save</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
