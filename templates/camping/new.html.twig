{% extends 'base1.html.twig' %}

{% block body %}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                
                <div class="breadcrumb-text" style="margin-bottom: 20px;"> <br></br>
                    <p>C A M P I N G S</p>
                    <h1> DISCOVER OUR SPOTS </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<style>
    .breadcrumb-section {
        background-color: #fdd835;
        color: #333;
        padding: 50px 0;
    }

    .breadcrumb-text {
        margin-bottom: 30px;
    }

    .breadcrumb-text p {
        margin-bottom: 10px;
    }

    .card {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        margin-top: 20px;
    }

    .card-header {
        background-color: #fdd835;
        color: #333;
    }

      .btn-primary {
        background-color: orange;
        border-color: orange;
        color: #fff;
    }

    .btn-primary:hover {
         background-color: darkorange;
        border-color: darkorange;
    }
</style>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Add New Camping</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="{{ path('app_camping') }}" class="btn btn-primary">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}


